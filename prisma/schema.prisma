// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  userId        Int      @id @default(autoincrement())
  userCheckId   String
  nickname      String
  email         String
  fruit         String?

  authorId  Int?  

  worries   Worries[]
  likes     Likes[]
  comments  Comments[]

  // 'likes' 관계는 선물 보내기와 받기 기능.
  // 선물을 보낸 사람과 받은 사람에 대한 관계는 'Likes' 테이블을 통해 관리
  likesSent     Likes[] @relation("LikeSender")     // 선물을 받은 사람 
  likesReceived Likes[] @relation("LikeReceiver")   // 선물을 보낸 사람

  solvedWorries Worries[] @relation("SolvedWorries")            // 해결된 문제
  helpedSolveWorries Worries[] @relation("HelpedSolveWorries")  // 해결한 문제
}


model Worries {
  worryId               Int       @id @default(autoincrement()) @map("worryId")
  commentAuthorId       Int       @map("commentAuthorId")

  content               String    @db.Text @map("content")
  createdAt             DateTime  @default(now()) @map("createdAt")
  icon                  Icon?     @map("icon")
  lastReplyTime         DateTime?                                      // 답변이 도착한 시간
  deletedAt             DateTime? @map("deletedAt")                    // 소프트 삭제를 위한  
  isSolved              Boolean   @default(false)                      // 고민이 해결됐는지에 대한 여부 확인
  
  userId      Int
  user        Users    @relation(fields: [userId], references: [userId], onDelete: Cascade)
  
  // 해결된 답변
  solvingCommentId Int?       @unique @map("solvingCommentId")
  solvingComment   Comments?  @relation("SolvingComment", fields: [solvingCommentId], references: [commentId])

  // 고민을 등록한 유저(선물을 보냄)
  solvedByUserId Int?   @map("solvedByUserId")
  solvedByUser   Users? @relation("SolvedWorries", fields: [solvedByUserId], references: [userId])

  // 고민을 해결한 유저(선물을 받음)
  helperUserId Int?   @map("helperUserId")
  helperUser   Users? @relation("HelpedSolveWorries", fields: [helperUserId], references: [userId])

  comments    Comments[] // 이 걱정에 달린 댓글들
  likes       Likes[]    // 이 걱정에 대한 좋아요
}

enum Icon{
  A
  B
  C
}


model Comments {
  commentId Int      @id @default(autoincrement()) @map("commentId")
  content   String   @db.Text  @map("content")
  createdAt DateTime @default(now())  @map("createdAt")
  updatedAt DateTime @default(now())  @map("updatedAt")
  
  parentId  Int?     
  parent    Comments? @relation("CommentHierarchy", fields: [parentId], references: [commentId]) // 댓글 계층
  children  Comments[] @relation("CommentHierarchy")

  authorId  Int
  author    Users     @relation(fields: [authorId], references: [userId])

  worryId    Int
  worry      Worries  @relation(fields: [worryId], references: [worryId])

  likes      Likes[]

  // 해결된 답변
  solvingWorryId Int?
  solvingWorry Worries? @relation("SolvingComment")
}

model Likes {
  likeId      Int       @id @default(autoincrement())  @map("likeId")

  // 좋아요를 누른 사용자
  userId      Int
  user        Users     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  // 선물 보내기 기능을 위해 추가된 필드
  senderId    Int? // 선물 보낸 사람
  sender      Users?    @relation("LikeSender", fields: [senderId], references: [userId])
  
  // 선물 받은 사람
  receiverId  Int?
  receiver    Users?    @relation("LikeReceiver", fields: [receiverId], references: [userId])
  
  commentId   Int?
  comment     Comments? @relation(fields: [commentId], references: [commentId], onDelete: Cascade)

  // 좋아요가 적용되는 대상 (댓글 또는 고민)
  worryId     Int?
  worry       Worries?  @relation(fields: [worryId], references: [worryId])
}